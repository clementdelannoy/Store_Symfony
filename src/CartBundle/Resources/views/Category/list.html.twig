{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Liste des cat√©gories' | trans }}</h1>

    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Active</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.active ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('cart_category_edit', { id: category.id }) }}" class="btn btn-outline-primary btn-sm">Editer</a>
                    <a href="{{ path('cart_category_delete', { id: category.id }) }}" class="btn btn-outline-danger btn-sm">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
